{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "es6",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./src"
  ]
}
